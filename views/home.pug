extends layout

block content
    section
        div
            
            h1 Messages
            -if(!user){
            //if logged out show <p>
            p Non-members can only view anonymized messages
            -}

            div.message-board-container 
                div.message-board 
                    each msg in allMessages
                        div.message-wrapper
                            p.username= msg.account.username
                            p.message= msg.message 
                            p.timestamp= msg.timestamp

                form(action="", method="post") 
                    div.text-input-wrapper
                        -if(!user){
                            //if not logged in, input is unusuable and has a placeholder value
                            input(type="text", name="textbox", placeholder="Must be a member to send messages")
                        -}else{
                            //else
                            input(type="text", name="textbox", placeholder="Type message here to add comment")
                        -}

                        button(type="submit") Send


