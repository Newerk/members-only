doctype html
html
  head
    title Members Only
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/eventListeners.js")
  body
    header 
      -if(user){
        div#upper-header 
         button#club-join-btn Join the Club <--- this should only appear after the user has logged in and not currently a club member
         
         button#admin-mode-btn Only appear once user is logged in--> Admin Mode: Disabled
      -}

      div#lower-header 
        button.home-btn(onclick="redirectToHome()") Members Only
        div.header-btns-wrapper
          -if(!user){
            button.signup-btn(onclick="redirectToSignup()") Sign Up 
            button.login-btn(onclick="redirectToLogin()") Login
          -} else {
            button(onclick="redirectToAccountPage()") Username Goes Here
          -}



    block content
